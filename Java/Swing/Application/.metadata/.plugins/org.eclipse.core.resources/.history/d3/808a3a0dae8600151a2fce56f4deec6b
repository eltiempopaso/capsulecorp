package Message;

public class MessageMaster implements IMessageMaster {
	private List<IMessageMaster> suscriptors_ = new ArrayList<IMessageMaster>();
	/* 
	 * IFrame methods 
	 * */
	public void setOnEvent(IFrameSuscriptor subscriptor) {
		if (!suscriptors_.contains(subscriptor))
		{
			suscriptors_.add(subscriptor);
		}
	}
	
	
	
	public boolean sendCommand(int command, int parameter) {
		String data = "c;"+command+";"+parameter;
		writeData(data);
		return true;
	}
	
	/* this method must be called by inherited classes */
	protected synchronized void eventReceived (int myEvent, int myData)
	{

	}



	@Override
	public void setOnEvent(IMessageMasterSuscriptor subscriptor) {
		// TODO Auto-generated method stub
		
	}



	@Override
	public void sendCommand(int aCommand) {
		// TODO Auto-generated method stub
		
	}
	
	/* abstract methods */
	
	
	//protected abstract void dataAvailable (String data);
}


